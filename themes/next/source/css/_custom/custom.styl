.posts-expand .post-edit {
  +mobile() { display: none; }
}

.nuget-badge code {
    background-color: #202020;
    border: 4px solid #c0c0c0;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    box-shadow: 2px 2px 3px #6e6e6e;
    color: #e2e2e2;
    display: block;
    font: 1.5em 'consolas', 'andale mono', 'lucida console', monospace;
    line-height: 1.5em;
    overflow: auto;
    padding: 15px;
}

img:not(.site-author-image) { border: none !important; }

.links-of-author {
  border-top: 1px dotted $grey-light;
  border-bottom: 1px dotted $grey-light;
}